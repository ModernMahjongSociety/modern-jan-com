{
  "name": "modern-jan",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "bun run fetch:linkcards && bun run generate:ogp && astro build && cp dist/sitemap-index.xml dist/sitemap.xml",
    "preview": "astro preview",
    "astro": "astro",
    "fetch:linkcards": "tsx scripts/fetch-link-card-metadata.ts",
    "generate:ogp": "tsx scripts/generate-og-images.ts",
    "extract:images": "bun run scripts/extract-referenced-images.ts",
    "upload:images": "dotenvx run -- bun run scripts/optimize-and-upload-images.ts",
    "upload:images:dry": "dotenvx run -- bun run scripts/optimize-and-upload-images.ts --dry-run",
    "upload:images:no-convert": "dotenvx run -- bun run scripts/optimize-and-upload-images.ts --skip-conversion",
    "upload:thumbnails": "dotenvx run -- tsx scripts/upload-thumbnails.ts",
    "upload:thumbnails:dry": "dotenvx run -- tsx scripts/upload-thumbnails.ts --dry-run",
    "setup:r2-domain": "dotenvx run -- bun run scripts/setup-r2-custom-domain.ts"
  },
  "dependencies": {
    "@astro-community/astro-embed-youtube": "^0.5.10",
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/sitemap": "^3.7.0",
    "@resvg/resvg-js": "^2.6.2",
    "@types/mdast": "^4.0.4",
    "astro": "^5.16.10",
    "gray-matter": "^4.0.3",
    "metascraper": "^5.49.15",
    "metascraper-description": "^5.49.15",
    "metascraper-image": "^5.49.15",
    "metascraper-title": "^5.49.15",
    "metascraper-url": "^5.49.15",
    "mj-tiles": "0.2.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "satori": "^0.19.1",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.970.0",
    "@dotenvx/dotenvx": "^1.51.4",
    "@types/metascraper": "^5.41.0",
    "@types/turndown": "^5.0.6",
    "@types/xml2js": "^0.4.14",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "turndown": "^7.2.2",
    "wrangler": "^4.60.0",
    "xml2js": "^0.6.2"
  }
}
