---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import Sidebar from '../components/Sidebar.astro';

interface Props {
  title: string;
  description?: string;
  breadcrumbItems?: { label: string; href: string }[];
}

const { title, description, breadcrumbItems } = Astro.props;

const defaultBreadcrumbItems = [
  { label: 'ホーム', href: '/' },
  { label: title, href: '' },
];

const finalBreadcrumbItems = breadcrumbItems || defaultBreadcrumbItems;
---

<BaseLayout title={title} description={description}>
  <Header />
  <main>
    <div class="container">
      <article class="page">
        <Breadcrumb items={finalBreadcrumbItems} />

        <header>
          <h1>{title}</h1>
        </header>

        <div class="content">
          <slot />
        </div>
      </article>

      <Sidebar />
    </div>
  </main>
  <Footer />
</BaseLayout>

<style>
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 40px 40px;
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 48px;
  }

  @media (max-width: 768px) {
    .container {
      padding: 40px 20px;
    }
  }

  @media (max-width: 1024px) {
    .container {
      grid-template-columns: 1fr;
      gap: 0;
    }
  }

  .page {
    min-width: 0;
  }

  h1 {
    font-size: 1.875rem;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 32px;
    color: var(--color-text-primary);
  }

  .content {
    line-height: 1.8;
    color: var(--color-text-primary);
  }

  .content :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 40px;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 1px solid var(--color-border);
  }

  .content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 32px;
    margin-bottom: 12px;
  }

  .content :global(p) {
    margin: 16px 0;
  }

  .content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    transition: color 0.15s ease;
  }

  .content :global(a:hover) {
    color: var(--color-accent-hover);
  }

  .content :global(img:not(.mj-tile)) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 24px 0;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 16px 0;
    padding-left: 24px;
  }

  .content :global(li) {
    margin: 8px 0;
  }
</style>
