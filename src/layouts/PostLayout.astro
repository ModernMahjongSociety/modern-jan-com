---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TableOfContents from '../components/TableOfContents.astro';
import TagList from '../components/TagList.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import SocialShare from '../components/SocialShare.astro';
import Sidebar from '../components/Sidebar.astro';

interface Props {
  post: {
    data: {
      title: string;
      description?: string;
      publishedAt: Date;
      updatedAt?: Date;
      tags: string[];
      category?: string;
      image?: string;
    };
    slug: string;
  };
  headings: { depth: number; slug: string; text: string }[];
}

const { post, headings } = Astro.props;
const { title, description, publishedAt, updatedAt, tags, image } = post.data;

// OGP画像URL（SSG生成）
const ogImageUrl = image
  ? image
  : `${Astro.site}ogp/${post.slug}.png`;

const breadcrumbItems = [
  { label: 'ホーム', href: '/' },
  { label: '記事一覧', href: '/blog/' },
  { label: title, href: '' },
];
---

<BaseLayout
  title={title}
  description={description}
  ogImage={ogImageUrl}
>
  <Header />
  <main>
    <div class="container">
      <article class="post">
        <Breadcrumb items={breadcrumbItems} />

        <header>
          <h1>{title}</h1>
          <div class="meta">
            <time datetime={publishedAt.toISOString()}>
              {publishedAt.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}
            </time>
            {updatedAt && (
              <span class="updated">
                （更新: {updatedAt.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}）
              </span>
            )}
          </div>
          <TagList tags={tags} />
        </header>

        <TableOfContents headings={headings} />

        <div class="content">
          <slot />
        </div>

        <SocialShare title={title} url={Astro.url.href} />
      </article>

      <Sidebar />
    </div>
  </main>
  <Footer />
</BaseLayout>

<style>
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 40px 40px;
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 48px;
  }

  @media (max-width: 768px) {
    .container {
      padding: 40px 20px;
    }
  }

  @media (max-width: 1024px) {
    .container {
      grid-template-columns: 1fr;
      gap: 0;
    }
  }

  .post {
    min-width: 0;
  }

  h1 {
    font-size: 1.875rem;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 16px;
    color: var(--color-text-primary);
  }

  .meta {
    color: var(--color-text-secondary);
    font-size: 14px;
    margin-bottom: 12px;
  }

  .updated {
    color: var(--color-text-tertiary);
  }

  .content {
    margin-top: 32px;
    line-height: 1.8;
    color: var(--color-text-primary);
  }

  .content :global(h2) {
    font-size: 1.625rem;
    font-weight: 600;
    margin-top: 48px;
    margin-bottom: 16px;
    padding-bottom: 8px;
    border-bottom: 1px solid var(--color-border);
  }

  .content :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    margin-top: 32px;
    margin-bottom: 12px;
  }

  .content :global(h4) {
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 24px;
    margin-bottom: 10px;
  }

  .content :global(p) {
    margin: 16px 0;
  }

  .content :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    transition: color 0.15s ease;
  }

  .content :global(a:hover) {
    color: var(--color-accent-hover);
  }

  .content :global(img:not(.mj-tile)) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 24px 0;
  }

  .content :global(pre) {
    background: #1e293b;
    padding: 16px;
    border-radius: 8px;
    overflow-x: auto;
    margin: 24px 0;
  }

  .content :global(code) {
    font-family: 'JetBrains Mono', 'Menlo', 'Monaco', monospace;
    font-size: 14px;
  }

  .content :global(:not(pre) > code) {
    background: var(--color-bg-tertiary);
    padding: 2px 6px;
    border-radius: 4px;
    color: #be185d;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 16px 0;
    padding-left: 24px;
  }

  .content :global(li) {
    margin: 8px 0;
  }

  .content :global(blockquote) {
    border-left: 4px solid var(--color-border);
    padding-left: 16px;
    margin: 24px 0;
    color: var(--color-text-secondary);
    font-style: italic;
  }

  .content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 24px 0;
  }

  .content :global(th),
  .content :global(td) {
    border: 1px solid var(--color-border);
    padding: 8px 12px;
    text-align: left;
  }

  .content :global(th) {
    background: var(--color-bg-secondary);
    font-weight: 600;
  }
</style>
