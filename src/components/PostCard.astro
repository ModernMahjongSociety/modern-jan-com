---
interface Props {
  post: {
    slug: string;
    data: {
      title: string;
      description?: string;
      publishedAt: Date;
      tags: string[];
      image?: string;
    };
  };
}

const { post } = Astro.props;
const { title, description, publishedAt, tags, image } = post.data;

// サムネイル画像URL（imageフィールドがなければOGP画像を使用）
const thumbnailUrl = image || `/ogp/${post.slug}.png`;
---

<article class="post-card">
  <a href={`/blog/${post.slug}/`} class="post-link">
    <div class="post-thumbnail">
      <img
        src={thumbnailUrl}
        alt={title}
        loading="lazy"
        decoding="async"
      />
    </div>
    <div class="post-content">
      <h2 class="post-title">{title}</h2>
      {description && <p class="post-description">{description}</p>}
      <div class="post-meta">
        <time datetime={publishedAt.toISOString()}>
          {publishedAt.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        {tags.length > 0 && (
          <span class="post-tags">
            {tags.slice(0, 3).map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </span>
        )}
      </div>
    </div>
  </a>
</article>

<style>
  .post-card {
    padding: 24px;
    border-bottom: 1px solid var(--color-border-light);
    background: white;
    transition: background-color 0.15s ease;
  }

  .post-card:hover {
    background: var(--color-bg-secondary);
  }

  .post-link {
    display: flex;
    gap: 20px;
    align-items: flex-start;
    color: inherit;
    text-decoration: none;
  }

  .post-link:hover .post-title {
    color: var(--color-accent);
  }

  .post-thumbnail {
    flex-shrink: 0;
    width: 200px;
  }

  .post-thumbnail img {
    width: 200px;
    height: 105px;
    object-fit: cover;
    border-radius: 6px;
    border: 1px solid var(--color-border);
    display: block;
  }

  .post-content {
    flex: 1;
    min-width: 0;
  }

  .post-title {
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.5;
    margin-bottom: 8px;
    transition: color 0.15s ease;
    color: var(--color-text-primary);
  }

  .post-description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: 12px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 0.8125rem;
    color: var(--color-text-tertiary);
  }

  .post-tags {
    display: flex;
    gap: 6px;
  }

  .tag {
    background: var(--color-bg-tertiary);
    color: var(--color-tag-text);  /* WCAG AA基準を満たすコントラスト比5.36:1 */
    padding: 2px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
  }

  @media (max-width: 768px) {
    .post-card {
      padding: 20px;
    }

    .post-link {
      flex-direction: column;
      gap: 16px;
    }

    .post-thumbnail {
      width: 100%;
    }

    .post-thumbnail img {
      width: 100%;
      height: auto;
      aspect-ratio: 1200 / 630;
    }
  }
</style>
