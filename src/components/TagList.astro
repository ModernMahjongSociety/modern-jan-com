---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

{tags.length > 0 && (
  <div class="tag-list">
    {tags.map(tag => (
      <a href={`/tag/${tag}/`} class="tag">
        {tag}
      </a>
    ))}
  </div>
)}

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin: 16px 0;
  }

  .tag {
    background: var(--color-bg-tertiary);
    color: var(--color-text-secondary);
    padding: 4px 12px;
    border-radius: 4px;
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .tag:hover {
    background: var(--color-accent);
    color: white;
  }
</style>
